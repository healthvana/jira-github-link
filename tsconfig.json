{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dest/",
    "target": "es2017",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["./src/*.ts"]
}
